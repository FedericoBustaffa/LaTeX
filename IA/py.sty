\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{py}

\RequirePackage{xcolor}
\RequirePackage{listings}

% Definizione linguaggi

% PSEUDO CODICE
\lstdefinelanguage{pseudo}{
	sensitive=true,
	% Keywords
	morekeywords={
		if, then, else, for, foreach, in, do, while,
		and, or, return, true, false
	},
	% Strings
	morestring=[b]",
	% Comments
	morecomment=[l]//,
	morecomment=[s]{/*}{*/}
}

% PYTHON
\lstdefinelanguage{python}{
	sensitive=true,
	% Keywords
	keywords={import, from, in, while, for, if, elif, else, try, except,
	+, -, *, /, =, ==, <, >, and, or, !, \%},
	keywords=[2]{def, True, False},
	% Strigs
	morestring=[b]",
	morestring=[b]',
	% comments
	morecomment=[l]{\#}
}

